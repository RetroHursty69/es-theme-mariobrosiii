<?xml version="1.0" encoding="UTF-8"?>
<theme>
   <formatVersion>4</formatVersion>

<!--
Carousel wheel and main menu background
-->


<feature supported="carousel">
   <view name="system">
      <carousel name="systemcarousel">
        <type>vertical</type>
        <pos>0.003 0.0</pos>
        <logoAlignment>center</logoAlignment>         
        <size>1 1.375</size>
        <logoScale>1.15</logoScale>
        <zIndex>3</zIndex>          
        <logoSize>0.27 0.22</logoSize>
        <color>00000000</color>
        <maxLogoCount>7</maxLogoCount>    
      </carousel>
      <image name="background" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
         <zIndex>2</zIndex>                 
         <path>./_inc/images/main_bottom.png</path>
      </image>
      <image name="background2" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
         <zIndex>4</zIndex>                 
         <path>./_inc/images/main_top.png</path>
      </image>                      
      <text name="systemInfo">     
         <pos>0.0 0.842</pos>
         <backgroundColor>00000000</backgroundColor>
         <color>000000</color>
         <fontPath>./_inc/fonts/SuperMario256.ttf</fontPath>
	     <fontSize>0.022</fontSize>
         <zIndex>5</zIndex>	     
      </text>            
   </view>
</feature>


